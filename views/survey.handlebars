<h1>{{title}}</h1>
<fieldset>
    <form method="post" action="http://web.engr.oregonstate.edu/~zhangluy/tools/class-content/form_tests/check_request.php">
        <div class="form-group">
            <div>
                <label for="fav_pokemon">Favorite Pokemon</label>
                <input type="text" name="fav_pokemon" class="form-control" id="fav_pokemon"
                       placeholder="Fav Pokemon">
                <small  class="form-text text-muted">Please type in what your favorite pokemon
                    is.</small>
            </div>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Select the days that you most often play pokemon go (if any)</label>
            {{#each day}}
                <br>
                <div>
                    <input class="days" type="checkbox" id={{this}} name={{this}} value={{this}}>
                    <label for={{this}}>{{this}}</label>
                </div>
            {{/each}}
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</fieldset>